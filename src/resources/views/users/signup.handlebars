<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black mt-4 mb-4" style="border-radius: 25px;">
                    <div class="card-body p-0">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form action="/signup/store" method="post" class="mx-1 mx-md-4">

                                    <div class="mb-4">
                                        <label class="form-label ml-4" for="name">Your Name</label>
                                        <div class=" d-flex flex-row align-items-center form-outline flex-fill mb-0">
                                            <i class="fas fa-user fa-lg me-3 fa-fw mr-2 text-danger"></i>
                                            <input name="name" type="text" id="name" class="form-control"
                                                required="required" />
                                        </div>
                                    </div>

                                    <div class=" mb-4">
                                        <label class="form-label ml-4" for="email">Your Email</label>
                                        <div class="d-flex flex-row align-items-center form-outline flex-fill mb-0">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw mr-2 text-warning"></i>
                                            <input name="email" type="email" id="email" class="form-control"
                                                required="required" />
                                            {{!-- <button class="btn btn-primary ml-2">Check</button> --}}
                                        </div>
                                    </div>

                                    <div class=" mb-4">
                                        <label class="form-label ml-4" for="password">Password</label>
                                        <div class="d-flex flex-row align-items-center form-outline flex-fill mb-0">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw mr-2 text-success"></i>
                                            <input name="password" type="password" id="password" class="form-control"
                                                required="required" />
                                        </div>
                                    </div>

                                    <div class=" mb-4">
                                        <label class="form-label ml-4" for="repeatPassword">Repeat your password</label>
                                        <div class="d-flex flex-row align-items-center form-outline flex-fill mb-0">
                                            <i class="fas fa-key fa-lg me-3 fa-fw mr-2 text-primary"></i>
                                            <input name="repeatPassword" type="password" id="repeatPassword"
                                                class="form-control" required="required" />
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mb-3 mb-lg-4 align-items-center">
                                        <button style="margin-left: 160px;" type="submit" class="btn btn-primary btn-lg">Register</button>
                                        <a class="text-danger text-nowrap ml-4" href="/login">You had an accout? Login Now</a>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                    class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>