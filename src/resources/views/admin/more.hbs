<div style="background-color: tan;" class="cotainer-fluid pb-5 pt-2">
  <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/myadmin">Admin Page</a></li>
    <li class="breadcrumb-item active" aria-current="page">More Feature</li>
  </ol>
</nav>
  <div class="container">
    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-primary">
        <tr>
          <th>Name</th>
          <th>Author</th>
          <th class="text-center">Public Comments</th>
          <th class="text-center">Hide Comments</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each songs}}
        <tr>
          <td>{{this.name}}</td>
          <td>
            <p class="fw-normal mb-1">{{this.author}}</p>
          </td>
          <td class="text-center">
            <span>{{this.Count}}</span>
          </td>
          <td class="text-center">
            <span>{{this.CountDeleted}}</span>
          </td>
          <td>
            <a href="/myadmin/more/{{this._id}}" class="btn btn-link btn-sm btn-rounded">
              Details
            </a>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="5" class="text-center">
            <span>Don't have any song. <a href="/myadmin/create">Create a new song</a></span>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>