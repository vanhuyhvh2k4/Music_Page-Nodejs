<section class="vh-100" style="background-color: #c5d8ff;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <div style="width: 80px; height: 80px; margin:32px auto 24px; border-radius: 50%; border: 1px solid green;">
              <img src="/media/users/{{user.avatar}}" alt="Avatar" class="" style="width: 100%; height: 100%; object-fit: cover; background-position: center; border-radius: 50%;" />
              </div>

              <h5 class="text-info">{{user.name}}</h5>
              <p>{{user.specialName}}</p>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6 class="text-warning">Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted">{{user.email}}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Phone</h6>
                    <p class="text-muted">{{user.phone}}</p>
                  </div>
                </div>
                <h6 class="text-success">Favourite</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Recent</h6>
                    <p class="text-muted">Lorem ipsum</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Most Viewed</h6>
                    <p class="text-muted">Dolor sit amet</p>
                  </div>
                </div>
                <div class="d-flex justify-content-around">
                  <a href="{{user.facebook}}"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                  <a href="{{user.twiter}}"><i class="fab fa-twitter fa-lg me-3"></i></a>
                  <a href="{{user.instagram}}"><i class="fab fa-instagram fa-lg"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>